<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_partie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:layout_weight="2"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btnRetourner"
            android:layout_width="43dp"
            android:layout_height="86dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@drawable/bordure_contact"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/homeAsUpIndicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="566dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/resultat_last_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/adversaire_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/source_code_pro_semibold"
                android:text="@string/votre_adversaire_avait_jou"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/mouvement_adv"
                app:layout_constraintTop_toBottomOf="@+id/move_soi_dernier" />

            <TextView
                android:id="@+id/lbl_dernier_move_soi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="0"
                android:fontFamily="@font/source_code_pro_semibold"
                android:text="@string/votre_mouvement_dernier_tour"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@+id/move_soi_dernier"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mouvement_adv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordure_contact"
                android:paddingLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/move_soi_dernier"
                app:srcCompat="@drawable/rockpaperscissors" />

            <ImageView
                android:id="@+id/move_soi_dernier"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bordure_contact"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/rockpaperscissors" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/num_tour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/source_code_pro_semibold"
            android:text="Tour numéro : "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mouvement_soi" />

        <ImageView
            android:id="@+id/mouvement_soi"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/bordure_contact"
            android:paddingLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/rockpaperscissors" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="344dp"
            android:fontFamily="@font/source_code_pro_semibold"
            android:text="Résultat : "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"

        android:padding="0dp">

        <ImageButton
            android:id="@+id/btn_roche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/bordure_contact"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/rock" />

        <ImageButton
            android:id="@+id/btn_papier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/bordure_contact"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/paper" />

        <ImageButton
            android:id="@+id/btn_ciseaux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/bordure_contact"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/scissors" />

        <Button
            android:id="@+id/btnJouer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bordure_contact"
            android:text="Jouer" />

    </LinearLayout>
</LinearLayout>